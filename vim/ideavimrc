""""""""""""""""""""""
"""""" LEADER KEY:
""""""""""""""""""""""
map <SPACE> <Leader>

""""""""""""""""""""""
"""""" SETTINGS:
""""""""""""""""""""""

" if hidden is not set, TextEdit might fail.
set hidden

" Some servers have issues with backup files, see #649
set nobackup
set nowritebackup
set showcmd
set updatetime=100
 

" don't give |ins-completion-menu| messages.
set shortmess+=c

set nocompatible

"indentation
set tabstop=4
set softtabstop=4
set shiftwidth=4
set noexpandtab
set smartindent
set smartcase
 

" line numbers and tabs
set number relativenumber
set nu rnu
set completeopt-=preview
set guioptions-=e
set sessionoptions+=tabpages,globals

 

" directory navigations and settings
set foldenable
set incsearch
set hlsearch
set showmatch
set wildmenu
set cursorline
set noswapfile

set tags=tags
set bs=2
set mouse=a
set clipboard=unnamedplus

 

" Don't offer to open certain files/directories
set wildignore+=*.bmp,*.gif,*.ico,*.jpg,*.png,*.ico
set wildignore+=*.pdf,*.psd
set wildignore+=node_modules/*,bower_components/*
set wildignore+=*/tmp/*,*.so,*.swp,*.zip

 
" Search down into subfolders
" Provides tab-completion for all file-related tasks
set path+=**


"""""""""""""""""""""""
""""" PERSONAL BINDINGS:
"""""""""""""""""""""""
nnoremap <leader>cn :noh<CR>
nnoremap Y y$
nnoremap <leader>s :w<CR>
nnoremap <leader>q :q<CR>
nnoremap <leader>Q :q!<CR>
 

"""""""""""""""""""""""
""""" IDEA SPECIFIC:
"""""""""""""""""""""""

map <leader>f <Action>(SearchEverywhere)
map <C-p> <Action>(GotoFile)
map <leader>/ <Action>(FindInPath)
map <leader>* <Action>(FindWordAtCaret)<Action>(FindInPath)
map <leader>bl <Action>(Switcher)
map <leader>uc <Action>(Run)
map <leader>m <Action>(ShowSettings)
 

map <leader>dl <Action>(ActivateProblemsViewToolWindow)
map <leader>dp <Action>(Debug)
map <leader>dt <Action>(ToggleLineBreakpoint)
map <leader>dg <Action>(ShowErrorDescription)
 

map ]d <Action>(GotoNextError)
map [d <Action>(GotoPreviousError)


map grr <Action>(FindUsages)
map grn <Action>(RenameElement)
map gra <Action>(ShowIntentionActions)
map gri <Action>(GotoImplementation)
map gry <Action>(GotoTypeDeclaration)
map grh <Action>(ParameterInfo)
map grR <Action>(FindUsagesInFile)
map gcc <Action>(CommentByLineComment)
 

map <leader>lf <Action>(ReformatCode)
map <leader>lg <Action>(QuickJavaDoc)
map <leader>ls <Action>(GotoSymbol)
