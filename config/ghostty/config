# Appearance
theme = JellyBeans

font-size = 14
font-family = JetBrainsMono Nerd Font

shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false

background-opacity = 0.9
window-padding-x = 5

# Bindings
keybind = ctrl+,>z=toggle_split_zoom
keybind = ctrl+,>shift+f=toggle_fullscreen
keybind = ctrl+,>c=new_tab
keybind = ctrl+,>shift+\=new_split:right
keybind = ctrl+,>-=new_split:down

## Movement
keybind = ctrl+,>h=goto_split:left
keybind = ctrl+,>j=goto_split:down
keybind = ctrl+,>k=goto_split:up
keybind = ctrl+,>l=goto_split:right

keybind = ctrl+,>1=goto_tab:1
keybind = ctrl+,>2=goto_tab:2
keybind = ctrl+,>3=goto_tab:3
keybind = ctrl+,>4=goto_tab:4

keybind = ctrl+,>p=previous_tab
keybind = ctrl+,>n=next_tab

## Closing, Quitting
keybind = ctrl+,>x=close_surface
keybind = ctrl+,>shift+k=close_tab
keybind = ctrl+,>shift+q=close_window
