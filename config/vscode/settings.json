{
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
      "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editor.background": "#1d1d1d",
      "sideBar.background": "#131212",
      "sideBar.foreground": "#e8e9e9",
      "scrollbarSlider.hoverBackground": "#35b1d3",
      "scrollbarSlider.activeBackground": "#05607e",
      "sideBarSectionHeader.background": "#086289",
      "list.hoverBackground": "#850a60",
      "statusBar.background": "#086289",
      "activityBar.foreground": "#DCDCAA",
      "activityBar.background": "#272626"
    },
    "[Cobalt2]": {
      "editor.background": "#132d42",
      "editor.foreground": "#fff",
      "list.hoverBackground": "#c39900",
      "list.hoverForeground": "#0c0c0c",
      "sideBarSectionHeader.background": "#ac8600",
      "sideBarSectionHeader.foreground": "#0e0e0e",
      "activityBar.foreground": "#ffc600"
    },
    "[Monokai]": {
      "editor.background": "#131313",
      "sideBar.background": "#1d1d1d",
      "sideBar.foreground": "#f1f1f1",
      "activityBar.background": "#000000",
      "list.hoverBackground": "#08898d",
      "sideBarSectionHeader.background": "#0a8181"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Default Dark+]": {
      "comments": "#8f9f9f"
    },
  },
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.sneak": true,
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "s"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ] 
        },
        {
            "before": ["<leader>", "2"],
            "commands": ["workbench.action.splitEditor"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<leader>", "n"],
          "commands": [":nohl"]
        },
        {
          "before": ["<leader>", "q"],
          "commands": [":q"]
        },
        {
          "before": ["<leader>", "f"],
          "commands": ["workbench.action.quickOpen"]
        }
    ]
}
