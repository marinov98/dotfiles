################################
##### WINDOW RESIZING
################################

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


################################
##### i3STATUS BAR
################################

bar {
        status_command i3status # i3blocks -c ~/.config/i3/i3blocks.conf
		tray_output primary
		position top
		
		colors {
			background #1A203A
			separator  #BBBBBB
        #					 border         background      text
			focused_workspace	 #00E0C2        #7B109B         #FFFFFF
			inactive_workspace       #333333        #5F676A		#FFFFFF
			urgent_workspace         #EA6213        #9E0000         #FFFFFF
		}
}

################################
##### i3-GAPS
################################

# NO BORDERS
for_window [class="^.*"] border pixel 0

smart_gaps on
gaps inner 5
gaps outer 0

mode "gaps" {
        bindsym t gaps inner all set 20
        bindsym f gaps inner all set 0

        bindsym k gaps inner all plus 5
        bindsym j gaps inner all minus 5

        # back to normal: enter or escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+g mode "gaps"

################################
##### EXTERNAL MONITOR(S)
################################

set $displayMode "Set displamode [l]aptop  [h]DP2 [w]DP1"
bindsym $mod+x mode $displayMode

mode $displayMode {
    bindsym w exec "~/.config/i3/scripts/home-display.sh";  \
                mode "default"
    bindsym h exec " ~/.config/i3/scripts/DP2-display.sh"; \
                mode "default"
    bindsym l exec " ~/.config/i3/scripts/laptop-display.sh"; \
                mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
